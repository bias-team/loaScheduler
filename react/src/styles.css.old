body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
  }
  
  header,
  footer {
    background-color: #333;
    color: #fff;
    text-align: center;
    padding: 1em;
  }
  
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    height: calc(100vh - 4em);
    max-width: 1024px;
    margin: 0 auto;
    padding: 1em;
    box-sizing: border-box;
  }
  
  article,
  aside {
    border: 1px solid #000;
    padding: 1em;
    margin: 0.5em;
    box-sizing: border-box;
  }
  
  article {
    width: 100%;
  }
  
  aside {
    width: 100%;
    position: relative;
  }
  
  table {
    width: 100%;
    border-collapse: collapse;
    box-sizing: border-box;
  }
  
  th,
  td {
    border: 1px solid #000;
    padding: 0.5em;
    text-align: left;
    box-sizing: border-box;
  }
  
  button {
    margin: 1em;
    padding: 0.5em 1em;
    box-sizing: border-box;
  }
  
  #addMember {
    display: none;
    margin: 0;
    padding: 0.5em;
    box-sizing: border-box;
  }
  
  #addMemberContainer {
    list-style: none;
    box-sizing: border-box;
  }
  
  #memberList:hover #addMember {
    display: inline-block;
  }
  
  .popup {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: #fff;
    padding: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    box-sizing: border-box;
  }
  
  #searchId {
    width: calc(100% - 90px);
    margin-right: 10px;
    box-sizing: border-box;
  }
  
  #searchButton {
    padding: 0.5em;
    box-sizing: border-box;
  }
  
  .form-group {
    margin-bottom: 15px;
    box-sizing: border-box;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 5px;
    box-sizing: border-box;
  }
  
  .form-group input,
  .form-group select {
    width: 100%;
    padding: 8px;
    box-sizing: border-box;
  }
  
  /* Media Queries */
  @media (min-width: 512px) {
    main {
      flex-direction: row;
    }
  
    article,
    aside {
      width: 45%;
    }
  }
  
  @media (max-width: 512px) {
    main {
      flex-direction: column;
    }
  
    article,
    aside {
      width: 100%;
    }
  }
  
/* Layout for the main page */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f0f0f0;
}

header {
    background-color: #333;
    color: white;
    padding: 10px;
    text-align: center;
}

main {
    display: flex;
    margin: 20px;
}

article {
    flex: 3;
    padding: 20px;
    background-color: #fff;
    margin-right: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

aside {
    flex: 1;
    padding: 20px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

footer {
    background-color: #333;
    color: white;
    text-align: center;
    padding: 10px;
    position: fixed;
    bottom: 0;
    width: 100%;
}

button {
    margin: 10px;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

button.save {
    background-color: #4CAF50;
    color: white;
}

button.cancel {
    background-color: #f44336;
    color: white;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
}

table, th, td {
    border: 1px solid #ddd;
}

th, td {
    padding: 8px;
    text-align: left;
}

th {
    background-color: #f2f2f2;
}
